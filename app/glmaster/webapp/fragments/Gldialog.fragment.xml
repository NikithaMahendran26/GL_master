<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">
    <Dialog
        id="dlgGLAccount"
        title="Create GL Account"
        contentWidth="100%"
        contentHeight="100%"
        resizable="true"
        draggable="true"
        afterClose="onGLDialogAfterClose">
        <content>
            <IconTabBar
                id="glTabBar"
                class="sapUiResponsiveContentPadding"
                expandable="false">
                <items>
                    <IconTabFilter
                        id="tabInitial"
                        text="Initial"
                        icon="sap-icon://add-document">
                        <f:SimpleForm
                            id="sfInitial"
                            editable="true"
                            layout="ResponsiveGridLayout"
                            labelSpanXL="4"
                            labelSpanL="3"
                            labelSpanM="12"
                            labelSpanS="12"
                            adjustLabelSpan="false"
                            emptySpanXL="0"
                            emptySpanL="0"
                            emptySpanM="0"
                            emptySpanS="0"
                            columnsXL="2"
                            columnsL="2"
                            columnsM="1"
                            singleContainerFullSize="false">
                            <f:content>
                                <Label text="GL Account"/>
                                <Input id="inpGLAccount"
                                       required="true"
                                       value="{GLRequestModel>/GLAccount}"/>

                                <Label text="Company Code"/>
                                <Input id="inpCompanyCode"
                                       required="true"
                                       value="{GLRequestModel>/CompanyCode}"/>
                            </f:content>
                        </f:SimpleForm>
                    </IconTabFilter>
                    <IconTabFilter
                        id="tabTypeDesc"
                        text="Type / Description"
                        icon="sap-icon://edit">

                        <f:SimpleForm
                            id="sfTypeDesc"
                            editable="true"
                            layout="ResponsiveGridLayout"
                            labelSpanXL="4"
                            labelSpanL="3"
                            labelSpanM="12"
                            labelSpanS="12"
                            adjustLabelSpan="false"
                            emptySpanXL="0"
                            emptySpanL="0"
                            emptySpanM="0"
                            emptySpanS="0"
                            columnsXL="2"
                            columnsL="2"
                            columnsM="1"
                            singleContainerFullSize="false">

                            <f:content>
                                <Label text="GL Account Type"/>
                                <Input id="inpGLType"
                                       required="true"
                                       value="{GLRequestModel>/GLAccountType}"/>

                                <Label text="Account Group"/>
                                <Input id="inpAccGroup"
                                       required="true"
                                       value="{GLRequestModel>/AccountGroup}"/>

                                <Label text="Short Text"/>
                                <Input id="inpShortText"
                                       value="{GLRequestModel>/ShortText}"/>

                                <Label text="GL Account Long Text"/>
                                <Input id="inpLongText"
                                       value="{GLRequestModel>/LongText}"/>
                            </f:content>
                        </f:SimpleForm>
                    </IconTabFilter>
                    <IconTabFilter
                        id="tabControlData"
                        text="Control Data"
                        icon="sap-icon://settings">
                        <f:SimpleForm
                            id="sfControlData"
                            editable="true"
                            layout="ResponsiveGridLayout"
                            labelSpanXL="4"
                            labelSpanL="3"
                            labelSpanM="12"
                            labelSpanS="12"
                            adjustLabelSpan="false"
                            emptySpanXL="0"
                            emptySpanL="0"
                            emptySpanM="0"
                            emptySpanS="0"
                            columnsXL="2"
                            columnsL="2"
                            columnsM="1"
                            singleContainerFullSize="false">
                            <f:content>
                                <Label text="Account Currency"/>
                                <Input id="inpCurrency"
                                       value="{GLRequestModel>/AccountCurrency}"/>

                                <Label text="Balance in Local Currency Only"/>
                                <CheckBox id="chkLocalCurrencyOnly"
                                          selected="{GLRequestModel>/LocalCurrencyOnly}"/>

                                <Label text="Tax Category"/>
                                <Input id="inpTaxCategory"
                                       value="{GLRequestModel>/TaxCategory}"/>

                                <Label text="Posting Without Tax Allowed"/>
                                <CheckBox id="chkPostingWithoutTax"
                                          selected="{GLRequestModel>/PostingWithoutTax}"/>

                                <Label text="Reconciliation Account"/>
                                <CheckBox id="chkReconciliation"
                                          selected="{GLRequestModel>/ReconciliationAccount}"/>

                                <Label text="Open Item Management"/>
                                <CheckBox id="chkOpenItem"
                                          selected="{GLRequestModel>/OpenItemManagement}"/>

                                <Label text="Sort Key"/>
                                <Input id="inpSortKey"
                                       value="{GLRequestModel>/SortKey}"/>
                            </f:content>
                        </f:SimpleForm>
                    </IconTabFilter>
                    <IconTabFilter
                        id="tabCreateBank"
                        text="Create / Bank / Interest"
                        icon="sap-icon://money-bills">
                        <f:SimpleForm
                            id="sfCreateBank"
                            editable="true"
                            layout="ResponsiveGridLayout"
                            labelSpanXL="4"
                            labelSpanL="3"
                            labelSpanM="12"
                            labelSpanS="12"
                            adjustLabelSpan="false"
                            emptySpanXL="0"
                            emptySpanL="0"
                            emptySpanM="0"
                            emptySpanS="0"
                            columnsXL="2"
                            columnsL="2"
                            columnsM="1"
                            singleContainerFullSize="false">
                            <f:content>
                                <Label text="Field Status Group"/>
                                <Input id="inpFieldStatus"
                                       required="true"
                                       value="{GLRequestModel>/FieldStatusGroup}"/>

                                <Label text="Post Automatically Only"/>
                                <CheckBox id="chkPostAutomatically"
                                          selected="{GLRequestModel>/PostAutomatically}"/>

                                <Label text="Relevant to Cash Flow"/>
                                <CheckBox id="chkCashFlow"
                                          selected="{GLRequestModel>/CashFlowRelevant}"/>

                                <Label text="House Bank"/>
                                <Input id="inpHouseBank"
                                       value="{GLRequestModel>/HouseBank}"/>

                                <Label text="Account ID"/>
                                <Input id="inpAccountId"
                                       value="{GLRequestModel>/AccountID}"/>
                            </f:content>
                        </f:SimpleForm>
                    </IconTabFilter>
                </items>
            </IconTabBar>
        </content>
        <footer>
            <OverflowToolbar>
                <Button id="bMsgRecEditService" icon="sap-icon://message-popup"
                    text="{= ${GLMessageModel>/messages}.length}" press="handleServiceMessagePopoverPress">
                    <dependents>
                        <MessagePopover id="mpServiceMessage" items="{GLMessageModel>/messages}">
                            <MessageItem type="{GLMessageModel>type}"
                                title="{GLMessageModel>title}"
                                activeTitle="{GLMessageModel>active}"
                                description="{GLMessageModel>description}"
                                subtitle="{GLMessageModel>subtitle}"
                                counter="{GLMessageModel>counter}" />
                        </MessagePopover>
                    </dependents>
                </Button>

                <ToolbarSpacer />

                <!-- <Button id="bduplcheck" text="Duplicate Check" press="OriginalDuplicateCheck" type="Emphasized" /> -->
                <Button id="bSubVal" text="Validate &amp; Submit" press="submitsrv" type="Emphasized" />
                <Button id="bCancel" text="Cancel" press="cancelService" />
            </OverflowToolbar>
        </footer>
        <!-- <buttons>
            <Button
                id="btnSaveGL"
                text="Save"
                type="Emphasized"
                press="submitsrv"/>
            <Button
                id="btnCancelGL"
                text="Cancel"
                press="cancelService"/>
        </buttons> -->
    </Dialog>
</core:FragmentDefinition>
