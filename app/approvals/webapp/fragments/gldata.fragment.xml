<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">

    <Dialog
        id="dlgGLAccount"
        title="{ui>/title}"
        contentWidth="100%"
        contentHeight="100%"
        resizable="true"
        draggable="true">

        <content>
            <IconTabBar class="sapUiResponsiveContentPadding">
                <items>
                    <!-- INITIAL -->
                    <IconTabFilter text="Initial" icon="sap-icon://add-document">
                        <f:SimpleForm editable="true" layout="ResponsiveGridLayout">
                            <f:content>
                                <Label text="GL Account"/>
                                <Input value="{GLRequestModel>/GLAccount}" editable="{ui>/editable}"/>
                                <Label text="Company Code"/>
                                <Input value="{GLRequestModel>/CompanyCode}" editable="{ui>/editable}"/>
                            </f:content>
                        </f:SimpleForm>
                    </IconTabFilter>

                    <!-- TYPE / DESCRIPTION -->
                    <IconTabFilter text="Type / Description" icon="sap-icon://edit">
                        <f:SimpleForm editable="true" layout="ResponsiveGridLayout">
                            <f:content>
                                <Label text="GL Account Type"/>
                                <Input value="{GLRequestModel>/GLAccountType}" editable="{ui>/editable}"/>
                                <Label text="Account Group"/>
                                <Input value="{GLRequestModel>/AccountGroup}" editable="{ui>/editable}"/>
                                <Label text="Short Text"/>
                                <Input value="{GLRequestModel>/ShortText}" editable="{ui>/editable}"/>
                                <Label text="Long Text"/>
                                <Input value="{GLRequestModel>/LongText}" editable="{ui>/editable}"/>
                            </f:content>
                        </f:SimpleForm>
                    </IconTabFilter>

                    <!-- CONTROL DATA -->
                    <IconTabFilter text="Control Data" icon="sap-icon://settings">
                        <f:SimpleForm editable="true" layout="ResponsiveGridLayout">
                            <f:content>
                                <Label text="Account Currency"/>
                                <Input value="{GLRequestModel>/AccountCurrency}" editable="{ui>/editable}"/>
                                <Label text="Local Currency Only"/>
                                <CheckBox selected="{GLRequestModel>/LocalCurrencyOnly}" enabled="{ui>/editable}"/>
                                <Label text="Open Item Management"/>
                                <CheckBox selected="{GLRequestModel>/OpenItemManagement}" enabled="{ui>/editable}"/>
                            </f:content>
                        </f:SimpleForm>
                    </IconTabFilter>

                    <!-- CREATE / BANK -->
                    <IconTabFilter text="Create / Bank" icon="sap-icon://money-bills">
                        <f:SimpleForm editable="true" layout="ResponsiveGridLayout">
                            <f:content>
                                <Label text="Field Status Group"/>
                                <Input value="{GLRequestModel>/FieldStatusGroup}" editable="{ui>/editable}"/>
                                <Label text="House Bank"/>
                                <Input value="{GLRequestModel>/HouseBank}" editable="{ui>/editable}"/>
                            </f:content>
                        </f:SimpleForm>
                    </IconTabFilter>
                </items>
            </IconTabBar>
        </content>

        <footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <Button text="{ui>/closeText}" press="onCloseGL"/>
            </OverflowToolbar>
        </footer>
    </Dialog>
</core:FragmentDefinition>
